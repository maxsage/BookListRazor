@page
@model BookListRazor.CreateModel

<br />
<h2 class="text-info">Create New Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <div class="border container" style="padding:30px;">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Book.Name" class="form-control" />
                </div>
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Owner"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Book.Owner" class="form-control" />
                </div>
                <span asp-validation-for="Book.Owner" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.GLCode"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Book.GLCode" class="form-control" />
                </div>
                <span asp-validation-for="Book.GLCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }